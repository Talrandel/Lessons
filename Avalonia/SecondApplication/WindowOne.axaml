<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="300"
        d:DesignHeight="150"
        Width="300"
        Height="150"
        x:Class="SecondApplication.WindowOne"
        Title="My new window">
    <ItemsControl>
      <StackPanel Margin="50" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="ButtonOk" Click="ButtonOk_OnClick">Ok</Button>
        <Button x:Name="ButtonCancel" Click="ButtonCancel_OnClick">Cancel</Button>
      </StackPanel>
    </ItemsControl>
</Window>
